        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDesarrolloMovil"
        android:usesCleartextTraffic="true">

        <!-- MainActivity - Solo redirige (actividad principal) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity - Pantalla de login -->
        <activity
            android:name=".ui.theme.LoginActivity"
            android:exported="false" />

        <!-- HomeActivity - Actividad principal despuÃ©s del login -->
