<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_nuevo_parque"
        android:textSize="24sp"
        android:textStyle="bold"
        android:color="#333"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etNombreParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tv_nombre_parque"
        android:inputType="textCapWords"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etUbicacionParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tv_direccion_parque"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etDescParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_descripcion"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top|start"
        android:minHeight="48dp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnGuardarParque"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_guardar_parque"
        android:textSize="16sp"/>

</LinearLayout>